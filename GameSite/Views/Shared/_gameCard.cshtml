@model GameSite.Data.Entities.Game

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.PhotoPath" alt="image for candy shop" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3><a asp-controller="Game" asp-action="Details" asp-route-id="@Model.GameId">@Model.GameName</a></h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-candyId="@Model.GameId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>@*
