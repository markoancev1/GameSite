@model GameSite.Data.Entities.Genre
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<div class="container">
    <h3 class="crud-title">Add a new Genre</h3>
    <hr />
    <div class="wrapper">
        <div class="row">
            <div class="col-12 col-md-12">
                <form asp-action="Create" name="genrecreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="GenreName" class="control-label">Name</label>
                        <input asp-for="GenreName" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreDescription" class="control-label">Short Description</label>
                        <input asp-for="GenreDescription" class="form-control" placeholder="Enter short description" />
                        <span asp-validation-for="GenreDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-block btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}