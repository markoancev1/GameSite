@model ShoppingCartViewModel

<div class="container"
    <div class="row">
        <h1 class="text-center mt-5">Your shopping cart</h1>

        <table class="table table-bordered table-striped mt-5">
            <thead>
                <tr>
                    <th>Selected amount</th>
                    <th>Game</th>
                    <th class="text-right">Price</th>
                    <th class="text-right">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="text-center">@line.Amount</td>
                        <td class="text-left">@line.Game.GameName</td>
                        <td class="text-right">@line.Game.Price.ToString("c")</td>
                        <td class="text-right">
                            @((line.Amount * line.Game.Price).ToString("c"))
                        </td>
                        <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-drinkId="@line.Game.GameId"></a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.ShoppingCartTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-left">
            <div class="btn-group ">
                <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</a>

            </div>
        </div>
    </div>
</div>