@model GameSite.Data.Entities.ConsoleUnit

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mt-5">Edit the Console</h4>
<hr />
<div class="row">
    <div class="col-md-12 col-12">
        <form asp-action="Edit" name="consoleedit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConsoleId" />
            <div class="row form-group">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ConsoleName" class="control-label" id="ConsoleName"> Enter Console Name</label>
                        <input asp-for="ConsoleName" class="form-control" id="ConsoleName" />
                        <span asp-validation-for="ConsoleName" class="text-danger" id="ConsoleName"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="IsItOnPc" class="control-label text-center">PC?</label>
                        @Html.CheckBoxFor(m => m.IsItOnPc, new { @checked = "checked", @class = "form-control" })
                        <span asp-validation-for="IsItOnPc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" rows="12" class="form-control" placeholder="Enter Console description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}